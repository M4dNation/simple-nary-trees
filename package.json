{
  "name": "simple-nary-trees",
  "version": "1.0.0",
  "keywords": [
    "data-structure",
    "queue"
  ],
  "description": "Simple n-ary tree implementation.",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "lint": "xo"
  },
  "repository": "https://github.com/M4dNation/simple-nary-trees",
  "license": "MIT",
  "dependencies": {
    "simple-queues": "1.0.4"
  },
  "devDependencies": {
    "jest": "24.1.0",
    "xo": "0.24.0"
  },
  "prettier": {
    "tabWidth": 2,
    "singleQuote": false,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "jsxBracketSameLine": true
  },
  "xo": {
    "space": 2,
    "prettier": true,
    "rules": {
      "promise/prefer-await-to-then": "warn"
    },
    "ignores": [
      "node_modules"
    ],
    "overrides": [
      {
        "files": [
          "tests/**"
        ],
        "globals": [
          "describe",
          "test",
          "expect",
          "afterEach",
          "beforeEach",
          "beforeAll",
          "jest",
          "jasmine"
        ]
      }
    ]
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true
  }
}
